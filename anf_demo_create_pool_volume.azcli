# create ANF account 
MCRG=MC_anftest-rg_AnfCluster01_japaneast
MCVNET=aks-vnet-xxxxxxxx
az netappfiles account create \
    -g $MCRG \
    --name anfac01 -l japaneast \
    --tags owner=anfdemo location=japaneast

# create a pool
az netappfiles pool create \
    --resource-group $MCRG \
    --location japaneast \
    --account-name anfac01 \
    --pool-name mypool1 \
    --size 4 \
    --service-level Standard

# create a volume
az netappfiles volume create \
    --resource-group $MCRG \
    --location japaneast \
    --account-name anfac01 \
    --pool-name mypool1 \
    --name myvol1 \
    --service-level Standard \
    --vnet $MCVNET \
    --subnet netapp-subnet \
    --usage-threshold 100 \
    --file-path nfspath01 \
    --protocol-types NFSv3

# View the created volume
az netappfiles volume show \
    --resource-group $MCRG \
    --account-name anfac01 \
    --pool-name mypool1 \
    --volume-name myvol1
